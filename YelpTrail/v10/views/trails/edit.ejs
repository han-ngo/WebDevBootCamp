<% include ../partials/header %>

    <div class="container">

        <div class="row">
            <h1 style="text-align: center">Edit <%= trail.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/trails/<%= trail._id %>/edit?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="<%= trail.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%= trail.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" value="<%= trail.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/trails">Go Back!</a>
            </div>
        </div>

    </div>

    <% include ../partials/footer %>